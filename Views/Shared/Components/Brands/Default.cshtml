@* Sử dụng IEnumerable cho phép các pthuc có thể lặp qua các phần tử  *@
@model IEnumerable<BrandModel>

@* asp-route-Slug  *@
@foreach (var item in Model)
{
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            <li><a asp-action="Index" asp-controller="Brand" asp-route-Slug="@item.Slug"> <span class="pull-right">(50)</span>@item.Name</a></li>
        </ul>
    </div>
}